<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/bg1"
    >
    <Button
        android:id="@+id/btn_main_reconnect"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@android:color/transparent"
        android:foreground="@drawable/reconnect_button_foreground"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:onClick="reconnect"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerInParent="true">

        <Button
            android:id="@+id/btn_main_create"
            android:layout_width="250dp"
            android:layout_height="130dp"
            android:layout_centerVertical="true"
            android:layout_margin="40dp"
            android:background="@drawable/custom_button"
            android:fontFamily="sans-serif-black"
            android:padding="20dp"
            android:text="CREATE\nGAME"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:onClick="goToCreateGameActivity"/>

        <Button
            android:id="@+id/btn_main_join"
            android:layout_width="250dp"
            android:layout_height="130dp"
            android:layout_centerVertical="true"
            android:layout_margin="40dp"
            android:background="@drawable/custom_button"
            android:fontFamily="sans-serif-black"
            android:padding="20dp"
            android:text="JOIN\nGAME"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:onClick="goToJoinGameActivity"/>
    </LinearLayout>

</RelativeLayout>