<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".JoinGameActivity"
    android:background="@drawable/bg2">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:background="#E6181818"
        android:padding="10dp">

        <EditText
            android:id="@+id/ed_joingame_name"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:hint="Your name"
            android:layout_gravity="center"
            android:fontFamily="sans-serif"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:backgroundTint="#FFFFFF"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:imeOptions="flagNoFullscreen"
            />
        <EditText
            android:id="@+id/ed_joingame_code"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:hint="Enter the code here"
            android:layout_gravity="center"
            android:fontFamily="sans-serif"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:backgroundTint="#FFFFFF"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:imeOptions="flagNoFullscreen"/>
        <Button
            android:id="@+id/btn_joingame_join"
            android:layout_width="250dp"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:background="@drawable/custom_button"
            android:fontFamily="sans-serif-black"
            android:padding="20dp"
            android:text="JOIN GAME"
            android:textColor="#FFFFFF"
            android:textSize="25sp"
            android:onClick="joinGame"/>
    </LinearLayout>

</RelativeLayout>